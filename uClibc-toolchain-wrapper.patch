+	set -e; \
+	for i in `ls ../../libc/sysdeps/linux/common/sys/*.h` ; do \
+		$(LN) -fs $$i .; \
+	done; \
+	if [ -d ../../libc/sysdeps/linux/$(TARGET_ARCH)/sys ] ; then \
+		for i in `ls ../../libc/sysdeps/linux/$(TARGET_ARCH)/sys/*.h` ; do \
+			$(LN) -fs $$i .; \
